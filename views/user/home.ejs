<body>
<div class="wrapper">
    <div class="box">
       
        <div class="logo">
            <img src="https://www.medicaps.ac.in/resources/img/logo-navbar.png">
        </div>
        <div class="form">
            <form id="form" method="post" action="/users/login" >
        <div class="heading">
            <h1>LOGIN</h1>
        </div>
        <div class="username">
            <input type="text" id="username" name="username" placeholder="Username">
        </div>
        
        <% if(failure && failure.length){ %>
            <div class="fail">

                *<%= failure %>
            </div>
        <% } %>
        <div class="Password">
            <input type="password" id="password" name="password" placeholder="Password">
        </div>
        <% if(passwordNotMatch && passwordNotMatch.length){ %>
            <div class="fail">
            *<%= passwordNotMatch %>
            </div>
        <% } %>
        <div class="admin">
            <p>Are you <a href="/admin/adminlogin" target="_self">admin?</a>
            </p>
        </div>
        <div class="login">
            <button >Login</button>
        </div>
    </div>
    
        
    </div>
        </div>
    </form>
    </div>
</div>
</div>
