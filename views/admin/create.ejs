	<div class="create_user">
		<form method="post" action="/admin/createuser">
			<h2>CREATE USER</h2>
			<div class="box">
				<div class="name">
					<label for="name">EMPLOYEE NAME :</label>
					<input name="name" type="text" id="name"></input>
				</div>
				<div class="name">
					<label for="id">EMPLOYEE ID :</label>
					<input name="id" type="text" id="id"></input>

				</div>
				<div class="name dropdown">
					<label for="designation" class="caret">DESIGNATION :</label>
					<select name="designation" id="designation" class="designation">
                        <option value="Assistant Professor">Assistant Professor</option>
                        <option value="Lab Assistant">Lab Assistant</option>
                        <option value="Lab Technician">Lab Technician</option>
                        <option value="Professor">Professor</option>
                        <option value="Associate Professor">Associate Professor</option>
                        <option value="Lecturer">Lecturer</option>
						<option value="HOD">HOD</option>
						<option value="DEAN">DEAN</option>
                        <option value="Pro VC">PRO VC</option>
                        <option value="VC">VC</option>
                        <option value="OSD">OSD</option>
					</select>

				</div>

					<div class="name dropdown">
						<label for="faculty" class="caret">FACULTY :</label>
						<select name="faculty" id="faculty" class="faculty">
							<option value="">Select</option>
							<%for(let i=0;i<fac.length;i++) { %>
								<option class="option" value="<%=fac[i].FID %>"> <%=fac[i].FNAME%></option>
							<% } %>
						  </select>
					</div>

					<div class="name dropdown ">
						<label for="department" class="caret">DEPARTMENT :</label>
						<select name="department" id="department" class="department">
							<option value="">Select</option>
							<%for(let i=0;i<facAndDept.length;i++) { %>
								<option class="option" value="<%=facAndDept[i].DEPTID %>"> <%=facAndDept[i].DEPTNAME%></option>
							<% } %>
						  </select>
					</div>

				<div class="name">
					<label for="email">EMAIL :</label>
					<input name="email" type="email" id="email"></input>
				</div>
					<div class="name">

						<label for="mnum">MOBILE NO. :</label>
						<input name="mnum" type="number" id="mnum"></input>
					</div>




				<div class="name">
					<label for="password">PASSWORD :</label>
					<input name="password" type="password" id="password"></input>

				</div>
				<div class="name">
					<input name="confirmpassword" type="password" id="confirmpassword"
						placeholder="CONFIRM PASSWORD"></input>

					<button class="btn">SAVE</button>
				</div>

			</div>
		</form>
	</div>
	</div>
</body>
